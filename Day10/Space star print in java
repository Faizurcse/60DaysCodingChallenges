import java.util.Scanner;
public class space star 
{
  public static void main(String args[])
  {
     int i,j,s,n;
     Scanner rf=new Scanner(System.in);
     System.out.println("Enter the number");
     n=rf.nextInt();
     for(i=1;i<=n;i++)
     {
        for(s=1;s<=n-1;s++)
        System.out.print(" ");
        for(j=1;j<=i;j++) 
        System.out.print("*");
        System.out.println();
     }     
  }
}
